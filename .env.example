# MCP4EDA Environment Configuration
# Copy this file to .env and fill in your values

# Required for RAG system (documentation search)
OPENAI_API_KEY=sk-proj-your-api-key-here

# Optional: ChromaDB configuration (defaults shown)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Optional: Project storage paths
MCP4EDA_PROJECTS_DIR=./projects
MCP4EDA_DB_PATH=./mcp4eda.db

# Optional: Docker container name
DOCKER_CONTAINER_NAME=mcp4eda
